<odoo>
    <data>
        <record model="ir.ui.view" id="view_library_yubo_loan_tree">
            <field name="name">library.yubo.loan.tree</field>
            <field name="model">library_yubo.loan</field>
            <field name="arch" type="xml">
                <tree decoration-info="duration &lt; 7" decoration-danger="duration &gt; 14">
                    <field name="book_id"/>
                    <field name="member_id"/>
                    <field name="loan_date"/>
                    <field name="return_date"/>
                    <field name="duration" sum="Total Días"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_library_yubo_loan_form">
            <field name="name">library.yubo.loan.form</field>
            <field name="model">library_yubo.loan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Información del Préstamo">
                                <field name="book_id" options="{'no_create': True}"/>
                                <field name="member_id"/>
                            </group>
                            <group string="Fechas y Duración">
                                <field name="loan_date"/>
                                <field name="return_date"/>
                                <field name="duration" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_library_yubo_loan">
            <field name="name">Préstamos</field>
            <field name="res_model">library_yubo.loan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Préstamos" id="menu_library_yubo_loan" 
                  parent="menu_library_yubo_management" 
                  action="action_library_yubo_loan" 
                  sequence="20"/>
    </data>
</odoo>